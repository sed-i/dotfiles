# https://editorconfig.org/

root = true

[*]
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true
indent_size = 4
indent_style = space
insert_final_newline = true
max_line_length = 99
tab_width = 4

[{*.bash,*.sh,*.zsh}]
indent_size = 2
tab_width = 2

[{*.har,*.json}]
indent_size = 2

[Makefile]
indent_style = tab

[{*.markdown,*.md}]
indent_size = 2
max_line_length = 79

[{*.yaml,*.yml}]
indent_size = 2

